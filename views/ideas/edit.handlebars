<div class="card card-body">
  <h3>Edit Video Idea</h3>
  <form method="POST" action="/ideas/{{idea.id}}?_method=PUT">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="title">Title</label>
      <input class="form-control" value="{{idea.title}}" required type="text" name="title" id="title">
    </div>
    <div class="form-group">
      <label for="details">Details</label>
      <textarea class="form-control" name="details" id="details" required>{{idea.details}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
  </form>
</div>