<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <h3 class="text-center">Acount Register</h3>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input class="form-control" value="{{name}}" type="name" name="name" id="name" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input class="form-control" type="email" value="{{email}}" name="email" id="email" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control" type="password" value="{{password}}" name="password" id="password" required>
        </div>
        <div class="form-group">
          <label for="passwordConf">Confirm Password</label>
          <input class="form-control" type="password" value="{{passwordConf}}" name="passwordConf" id="passwordConf"
            required>
        </div>
        <input class="btn btn-primary" type="submit" value="Register">
      </form>
    </div>
  </div>
</div>